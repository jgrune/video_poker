<h1>Hand #<%= @hand.id %></h1>
<h3><%= @test %></h3>
<div class="hand">
  <% @hand.cards.each do |card| %>
  <div>
    <p><%= card.value %> of <br/><%= card.suit %></p>
    <%= image_tag ("#{card.suit[0]}0#{card.value}.png") %>
  </div>
  <% end %>
</div>
<h1> <%= link_to "DRAW CARDS", edit_hand_path(@hand) %></h1>
